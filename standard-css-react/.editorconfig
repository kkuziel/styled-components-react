# EditorConfig is awesome: https://EditorConfig.org

root = true
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,json,html,css}]
indent_style = space
indent_size = 2

[*.{js,jsx}]
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.html]
block_comment_start = <!--
block_comment_end = -->

[*.sh]
indent_style = tab
